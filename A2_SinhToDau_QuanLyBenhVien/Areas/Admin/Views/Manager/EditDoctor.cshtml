@model A2_SinhToDau_QuanLyBenhVien.Models.Doctor
@{
    ViewData["Title"] = "EditDoctor";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container px-4">
    <h2 class="mt-3 mb-3 ml-3">Sửa Thông Tin Bác Sĩ</h2>
    <hr />
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="EditDoctor" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-2">
                    <label asp-for="DrName" class="control-label">Tên</label>
                    <input asp-for="DrName" class="form-control" />
                    <span asp-validation-for="DrName" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="PhoneNumber" class="control-label">Số Điện Thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Experience" class="control-label">Kinh Nghiệm LÀm Việc</label>
                    <input asp-for="Experience" class="form-control" />
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="SpecialistId" class="control-label">Chuyên Khoa</label>
                    <select asp-for="SpecialistId" class="form-control" asp-items="ViewBag.Specialists" class="form-control"></select>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="AvtImage" class="control-label">Ảnh Đại Diện</label>
                    <input type="file" asp-for="AvtImage" class="form-control" id="imageInput" />
                    <span asp-validation-for="AvtImage" class="text-danger"></span>
                    <br />
                    <div class="form-group mb-1 mt-1">
                        <img id="previewImage" style="max-width: 200px; display: none;" alt="Image preview" />
                    </div>
                </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
            </form>
            <script>
                document.getElementById('imageInput').addEventListener('change', function (event) {

                    var output = document.getElementById('previewImage');

                    if (this.files && this.files[0]) {

                        var reader = new FileReader();

                        reader.onload = function (e) {

                            output.src = e.target.result;
                            output.style.display = 'block';
                        };

                        reader.readAsDataURL(this.files[0]);
                    }

                });

            </script>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
