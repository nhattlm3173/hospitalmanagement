@model A2_SinhToDau_QuanLyBenhVien.Models.Appointment
@{
    ViewData["Title"] = "EditAppointment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container px-4">
    <h2 class="mt-3 mb-3 ml-3">Sửa Thông Tin Đăng Ký</h2>
    <hr />
    <div class="row justify-content-center align-items-center mt-5 mb-4" id="main-login-page">
        <div class="col-md-8 col-lg-6">
            <div id="form-login">
                <section class="flex-grow-1 p-5 mx-5">
                    <form asp-action="EditAppointment" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-2">
                            <label asp-for="CustomerName" class="control-label formlogin">Tên Bệnh Nhân</label>
                            <input asp-for="CustomerName" class="form-control border-radius" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="CustomerEmail" class="control-label formlogin">Email</label>
                            <input asp-for="CustomerEmail" class="form-control border-radius" />
                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="CustomerPhone" class="control-label formlogin">Số Điện Thoại</label>
                            <input asp-for="CustomerPhone" class="form-control border-radius" />
                            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="CustomerAddress" class="control-label formlogin">Địa Chỉ</label>
                            <input asp-for="CustomerAddress" class="form-control border-radius" />
                            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Reason" class="control-label formlogin">Lý Do</label>
                            <input asp-for="Reason" class="form-control border-radius" />
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Note" class="control-label formlogin">Ghi Chú</label>
                            <input asp-for="Note" class="form-control border-radius" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Date" class="control-label formlogin">Ngày khám</label>
                            <input asp-for="Date" type="date" class="form-control border-radius" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Time" class="control-label formlogin">Giờ khám</label>
                            <select asp-for="Time" asp-items="ViewBag.time" class="form-control border-radius"></select>
                            <span asp-validation-for="Time" class="text-danger"></span>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
