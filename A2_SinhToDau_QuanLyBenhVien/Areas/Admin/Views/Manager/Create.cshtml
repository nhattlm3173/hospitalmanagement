@model A2_SinhToDau_QuanLyBenhVien.Models.Doctor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="container px-4">
    <h2 class="mt-3 mb-3 ml-3">Thêm Bác Sĩ</h2>
    <hr />
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="DrName" class="control-label">Tên</label>
                    <input asp-for="DrName" class="form-control" />
                    <span asp-validation-for="DrName" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="PhoneNumber" class="control-label">Số Điện Thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="AvtImage" class="control-label">Ảnh Đại Diện</label>
                    <input type="file" asp-for="AvtImage" class="form-control" />
                    <span asp-validation-for="AvtImage" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Experience" class="control-label">Kinh Nghiệm LÀm Việc</label>
                    <input asp-for="Experience" class="form-control" />
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="SpecialistId" class="control-label">Chuyên Khoa</label>
                    <select asp-for="SpecialistId" class="form-control" asp-items="ViewBag.Specialists" class="form-control"></select>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Thêm Bác Sĩ" class="w-100 btn btn-lg btn-primary" />
                </div>
            </form>
        </div>
    </div>
    </div>
    
