                    <input asp-for="SpecialistName" class="form-control" />
                    <span asp-validation-for="SpecialistName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="SpecialistImg" class="control-label">Ảnh</label>
                    <input type="file" asp-for="SpecialistImg" class="form-control" />
                    <span asp-validation-for="SpecialistImg" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="SpecialistDescription" class="control-label">Mô tả</label>
                    <textarea id="tiny" asp-for="SpecialistDescription"></textarea>
                    <span asp-validation-for="SpecialistDescription" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Thêm Bác Sĩ" class="w-100 btn btn-lg btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

