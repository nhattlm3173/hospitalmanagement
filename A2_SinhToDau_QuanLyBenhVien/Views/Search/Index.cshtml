@if (ViewBag.news_search != null || ViewBag.services_search != null)
{
    <div class="container">
        <div class="main-search">
            <div class="row">
                @if (ViewBag.news_search != null && ViewBag.services_search != null)
                {
                    <div class="col-md-6" id="search-col-left">
                        <h2>TIN TỨC</h2>
                        @foreach (var item in ViewBag.news_search)
                        {
                            <div class="card mt-4" id="card1">
                                <div class="img-top">
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.MainImg))" alt="@item.Title" />
                                </div>
                                <div class="content-search">
                                    <div class="search-title">
                                        <p>@item.Title</p>
                                    </div>
                                    <div class="search-text-teaser">
                                        <p>@item.NewsTeaser</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6" id="search-col-right">
                        <h2>DỊCH VỤ</h2>
                        @foreach (var item in ViewBag.services_search)
                        {
                            <div class="card mt-4" id="card1">
                                <div class="img-top">
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.MainImg))" alt="@item.SVName" />
                                </div>
                                <div class="content-search">
                                    <div class="search-title">
                                        <p>@item.SVName</p>
                                    </div>
                                    <div class="search-text-teaser">
                                        <p>@item.SVTeaser</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    @if (ViewBag.news_search != null)
                    {

                        <h2 class="mt-3">TIN TỨC</h2>
                        @foreach (var item in ViewBag.news_search)
                        {
                            <div class="col-md-6 mt-4 p-0" id="search-col2-left">
                                <div class="img-left">
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.MainImg))" alt="@item.Title" />
                                </div>
                            </div>
                            <div class="col-md-6 mt-4 p-0" id="search-col2-right">
                                <div class="card" id="card2" style="border:none; box-shadow:none;height:100%;
                                                                    border-start-end-radius:1em;border-end-end-radius:1em;
                                                                    background-color: aliceblue;">
                                    <div class="content-search2">
                                        <div class="search-title2">
                                            <a asp-area="" asp-controller="News" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a>
                                        </div>
                                        <div class="search-text-teaser2">
                                            <p>@item.NewsTeaser</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                    @if (ViewBag.services_search != null)
                    {
                        <h2 class="mt-3">DỊCH VỤ</h2>
                        @foreach (var item in ViewBag.services_search)
                        {
                            <div class="col-md-6 mt-4 p-0" id="search-col2-left">
                                <div class="img-left">
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.MainImg))" alt="@item.SVName" />
                                </div>
                            </div>
                            <div class="col-md-6 mt-4 p-0" id="search-col2-right">
                                <div class="card" id="card2" style="border:none; box-shadow:none;height:100%;
                                                                    border-start-end-radius:1em;border-end-end-radius:1em;
                                                                    background-color: aliceblue;">
                                    <div class="content-search2">
                                        <div class="search-title2">
                                            <a asp-area="" asp-controller="News" asp-action="Detail" asp-route-id="@item.Id">@item.SVName</a>
                                        </div>
                                        <div class="search-text-teaser2">
                                            <p>@item.SVTeaser</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
}
else
{
    <p class="fs-2 d-flex justify-content-center">Không tìm thấy tin tức hoặc dịch vụ!</p>
}
